<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="test_local">
		<class>ch.maxant.oopsoadci_common.bankingexample.data.Role</class>
		<class>ch.maxant.oopsoadci_common.bankingexample.data.Party</class>
		<class>ch.maxant.oopsoadci_common.bankingexample.data.BankAccount</class>
		<class>ch.maxant.oopsoadci_common.bankingexample.data.LedgerEntry</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/test" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="password" />
		</properties>
	</persistence-unit>
</persistence>
